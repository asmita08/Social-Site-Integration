<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/google"
    android:alpha="0.7"
    tools:context=".GoogleLoginActivity2">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/googledp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/googledp"
        android:layout_centerHorizontal="true"
        android:id="@+id/googlename"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/googlename"
        android:layout_centerHorizontal="true"
        android:id="@+id/googlemailid"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Emailid"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/googlemailid"
        android:layout_centerHorizontal="true"
        android:id="@+id/googleid"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"
        android:text="Googleid"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/googleid"
        android:layout_marginTop="20dp"
        android:text="Sign  out"
        android:textSize="20sp"
        android:id="@+id/signoutbtn"/>








</RelativeLayout>